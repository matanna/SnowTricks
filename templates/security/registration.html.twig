{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Inscription{% endblock %}

{% block body %}

    <div class="container">
        <h1>S'inscrire</h1>
        <hr />
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {'label': 'Pseudo :' }) }}
            {{ form_row(registrationForm.email, {'label': 'Email :'}) }}
            {{ form_row(registrationForm.password, {'label': 'Mot de passe :'}) }}
            {{ form_row(registrationForm.confirmPassword, {'label': 'Confirmation mot de passe :'}) }}
            {{ form_row(registrationForm.fullName, {'label': 'Nom complet :'}) }}
            {{ form_row(registrationForm.profilPicture, {'label': 'Photo de profil :'}) }}
            <button type="submit" class="btn btn-outline-primary">S'inscrire !</button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
