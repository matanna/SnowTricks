{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container">
    <h1>Mon Profil</h1>
    <hr \>
    {{ form_start(profilForm) }}
    <div class="row">
        <div class="col-4">
            {% if app.user.profilPicture == null %}
            <img src="{{ asset('img/default_profil.png') }}" alt="photo de profil" id="profil">
            {% else %}
            <img src="{{ asset('img_uploads/' ~ app.user.profilPicture) }}" alt="photo de profil" id="profil">
            {% endif %}
        </div>
        <div class="col-8">
            {{ form_row(profilForm.username, {'label': 'Votre pseudo :', 'attr': {'class': 'mb-4'}}) }}
            {{ form_row(profilForm.email, {'label': 'Votre email :', 'attr': {'class': 'mb-4'}}) }}
            {{ form_row(profilForm.fullName, {'label': 'Votre nom complet :', 'attr': {'class': 'mb-4'}}) }}
            {{ form_row(profilForm.profilPicture, {'label': 'Votre photo de profil :', 'attr': {'class': 'mb-4'}}) }}
            <div class="row align-items-end">
                <div class="col-6 ">
                    <a href="{{ path('forgot_password') }}" class="mt-4">Modifier le mot de passe >>></a> 
                </div>
                <div class="text-right col-6">
                    <button type="submit" class="btn btn-outline-primary mt-4">Enregistrer</button>
                </div>
            </div>
            
        </div>
    </div>
    {{ form_end(profilForm) }}
    
</div>
{% endblock %}
